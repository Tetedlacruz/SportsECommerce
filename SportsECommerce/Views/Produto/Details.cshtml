@model SportsECommerce.Models.Produto

@{
    ViewData["Title"] = @Html.DisplayNameFor(model => model.Nome);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tamanhos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tamanhos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning text-black" asp-action="Edit" asp-route-id="@Model?.ProdutoID">Editar</a>
    <a class="btn btn-info text-black" asp-action="Index">Voltar</a>
</div>
